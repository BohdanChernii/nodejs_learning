{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "Learn"
  },
  "paths": {
    "/users": {
      "get": {
        "description": "Get all users",
        "operationId": "get-all-users",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Success response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SingleUser"
              }
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "description": "Get one  user",
        "operationId": "get-one-user",
        "parameters": [
          {
            "name": "userId",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "Authorization",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/SingleUser"
            },
            "description": "Success response"
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/ApiError"
            }
          }
        }
      },
      "put": {
        "description": "Update one user",
        "operationId": "update-one-user",
        "parameters": [
          {
            "name": "userId",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User was updated",
            "schema": {
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/ApiError"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ApiError": {
      "properties": {
        "statusCode": {
          "type": "number",
          "example": 400
        },
        "message": {
          "type": "string",
          "example": "Bad request"
        }
      }
    },
    "SingleUser": {
      "properties": {
        "name": {
          "type": "string",
          "example": "Bohdan"
        },
        "age": {
          "type": "number",
          "example": 21
        },
        "email": {
          "type": "string",
          "example": "bohdanchik@gmail.com"
        },
        "phone": {
          "type": "string",
          "example": "+380996510938"
        }
      }
    }
  }
}